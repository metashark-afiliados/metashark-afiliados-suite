// tsconfig.json
{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "types": ["vitest/globals", "@testing-library/jest-dom", "node"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"],
      "server-only": ["./tests/mocks/server-only.ts"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowImportingTsExtensions": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.json",
    ".next/types/**/*.ts",
    // --- INICIO DE MEJORA: INCLUSIÓN EXPLÍCITA DE ARCHIVOS CRÍTICOS ---
    "src/lib/hooks/useHandleErrors.ts", // Nuevo hook de manejo de errores
    "tests/mocks/factories/context.factory.ts", // Nueva factoría de mocks
    // --- FIN DE MEJORA ---
    "src/components/auth/LoginForm.tsx.old",
    "src/lib/actions/auth.actions.ts.old",
    "src/middleware/handlers/auth/index.ts.old",
    "vitest.config.ts",
    "vitest.setup.ts",
    "tests/config/vitest.setup.ts"
  ],
  "exclude": ["node_modules"]
}
